{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C/C++: g++14 build active file",
        "type": "shell",
        "command": "/opt/homebrew/bin/g++-14",
        "args": [
          "-std=c++20",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      }
    ]
  }
  